{%
    set classes = [
    'bg-white health-paragraph section-health section--fluid-center',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<section{{ attributes.addClass(classes) }}>
<div class="container">
  <div class="row ">
  <div class="col-md-6 col-12 d-flex justify-content-center flex-column">
    <h3 class="bold-title bold-title--medium">{{ content.field_title }}<span class="bold-title__highlight">{{content.field_header_highlight}}</span></h3>
    <p class="hidden-sm-down description">{{ content.field_mission_description }}</p>
  </div>
  <div class="col-md-6 col-12">
    <div class="health-paragraph__image">
        {{ content.field_common_image }}
    </div>
    <p class="hidden-md-up description">{{ content.field_mission_description }}</p>
  </div>
  </div>
</div>
</section>