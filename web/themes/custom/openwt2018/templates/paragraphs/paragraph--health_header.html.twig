{%
    set classes = [
    'paragraph header header--large section-health',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}
<section {{ attributes.addClass(classes) }}>
  <div class="container">
    <h1 class="header__title">{{ content.field_title }} <span class="highlight d-inline-block">{{content.field_header_highlight}}</span></h1>
    <div class="bg-white header__des header__des--blue">
      {{ content.field_header_text }}
    </div>
  </div>
</section>
