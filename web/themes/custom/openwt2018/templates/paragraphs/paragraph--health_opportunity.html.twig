{%
    set classes = [
    'paragraph opportunity',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}

<div {{ attributes.addClass(classes) }}>
  <div class="block-wrapper">
    <div class="opportunity__image">{{ content.field_image }}</div>
    <h4 class="opportunity__title bold-title bold-title--small">{{ content.field_title }}</h4>
    <div class="opportunity__description">{{ content.field_description }}</div>
  </div>
</div>
