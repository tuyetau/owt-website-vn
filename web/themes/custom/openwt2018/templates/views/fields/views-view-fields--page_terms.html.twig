{% if fields.field_illustration.content is not empty %}
	{% set illustration = fields.field_illustration.content %}
{% else %}
	{% set illustration = fields.field_header_background_img.content %}
{% endif %}

<div class="case-wrapper col-12 col-md-6 col-lg-4 col-sm-6">
	<article class="case grid-item">
	  <a class="case-link" href="{{ fields.path.content }}" class="item-new">
	  	<figure class="case__illustration" alt="{{ fields.title.content }}">{{ illustration }}</figure>
			<div class="padding">
				<div class="title-new">
					<h4>{{ fields.title.content }}</h4>
				</div>
			</div>
	  </a>
	</article>
</div>
